nombre = "Tomas"
dia = 3

print ("Forma 1")
print ("hola Tomas es el 3 de Agosto")
print("")
print ("Forma 2")
print ("hola " + nombre + " es el " + str(dia) + " de Agosto")
print("")
print ("Forma 3")
print ("hola {} es el {} de Agosto".format( nombre , dia ))
print("")
print ("Forma 4")
print (f"hola {nombre} es el {dia} de Agosto")